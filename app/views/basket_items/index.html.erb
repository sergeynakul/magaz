<h1>Listing basket_items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Basket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @basket_items.each do |basket_item| %>
      <tr>
        <td><%= basket_item.item %></td>
        <td><%= basket_item.basket %></td>
        <td><%= link_to 'Show', basket_item %></td>
        <td><%= link_to 'Edit', edit_basket_item_path(basket_item) %></td>
        <td><%= link_to 'Destroy', basket_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

